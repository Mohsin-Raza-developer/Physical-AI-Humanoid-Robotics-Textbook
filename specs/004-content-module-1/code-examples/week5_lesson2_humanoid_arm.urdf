<?xml version="1.0"?>
<!-- 
URDF Model: 7-DOF Humanoid Arm
Author: Physical AI Humanoid Robotics Textbook
Description: This URDF model defines a 7-DOF humanoid arm with proper kinematic structure.
The arm includes shoulder (3-DOF), elbow (1-DOF), and wrist (3-DOF) joints to provide 
dexterous manipulation capabilities. All links have visual, collision, and inertial properties.

Joint Convention:
- Pitch: Rotation around Y-axis
- Roll: Rotation around X-axis  
- Yaw: Rotation around Z-axis

Coordinate Frame Convention (Right-Hand Rule):
- X: Forward
- Y: Left
- Z: Up
-->

<robot name="humanoid_arm">

  <!-- Base Link (Fixed to robot body) -->
  <!-- Coordinate Frame: X=forward, Y=left, Z=up -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Shoulder Pitch Link - First joint of the arm (pitch) -->
  <!-- This link represents the shoulder pitch actuator -->
  <link name="shoulder_pitch_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.15"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Shoulder Joint 1 (Pitch) -->
  <!-- Parent: base_link, Child: shoulder_pitch_link -->
  <!-- This joint allows the shoulder to move up/down (pitch) around Y-axis -->
  <joint name="shoulder_pitch_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_pitch_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>  <!-- 10cm above base_link -->
    <axis xyz="0 1 0"/>  <!-- Rotate around Y axis (pitch) -->
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>  <!-- ±90 degrees -->
  </joint>

  <!-- Shoulder Roll Link - Second joint of the arm (roll) -->
  <!-- This link represents the shoulder roll actuator -->
  <link name="shoulder_roll_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="light_blue">
        <color rgba="0.5 0.5 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Shoulder Joint 2 (Roll) -->
  <!-- Parent: shoulder_pitch_link, Child: shoulder_roll_link -->
  <!-- This joint allows the shoulder to rotate in/out (roll) around X-axis -->
  <joint name="shoulder_roll_joint" type="revolute">
    <parent link="shoulder_pitch_link"/>
    <child link="shoulder_roll_link"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>  <!-- 7.5cm above shoulder_pitch_link -->
    <axis xyz="1 0 0"/>  <!-- Rotate around X axis (roll) -->
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>  <!-- ±90 degrees -->
  </joint>

  <!-- Upper Arm Link - Between shoulder and elbow -->
  <!-- This link represents the upper arm structure -->
  <link name="upper_arm_link">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>  <!-- Center is mid-length -->
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Shoulder Yaw Joint -->
  <!-- Parent: shoulder_roll_link, Child: upper_arm_link -->
  <!-- This joint allows the arm to swing left/right (yaw) around Z-axis -->
  <joint name="shoulder_yaw_joint" type="revolute">
    <parent link="shoulder_roll_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>  <!-- 5cm above shoulder_roll_link -->
    <axis xyz="0 0 1"/>  <!-- Rotate around Z axis (yaw) -->
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>  <!-- ±90 degrees -->
  </joint>

  <!-- Elbow Link -->
  <!-- This link represents the forearm structure -->
  <link name="forearm_link">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>  <!-- Center is mid-length -->
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.6"/>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Elbow Joint (Pitch) -->
  <!-- Parent: upper_arm_link, Child: forearm_link -->
  <!-- This joint allows the elbow to bend (pitch) around Y-axis -->
  <joint name="elbow_pitch_joint" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>  <!-- 30cm above upper_arm_link (arm length) -->
    <axis xyz="0 1 0"/>  <!-- Rotate around Y axis (pitch) -->
    <limit lower="-2.0" upper="2.0" effort="100" velocity="1.0"/>  <!-- -114 to 114 degrees -->
  </joint>

  <!-- Wrist Roll Link - First wrist joint (roll) -->
  <!-- This link represents the wrist roll actuator -->
  <link name="wrist_roll_link">
    <visual>
      <geometry>
        <box size="0.06 0.06 0.04"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.06 0.06 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Wrist Joint 1 (Roll) -->
  <!-- Parent: forearm_link, Child: wrist_roll_link -->
  <!-- This joint allows the wrist to rotate (roll) around X-axis -->
  <joint name="wrist_roll_joint" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>  <!-- 25cm above forearm_link (forearm length) -->
    <axis xyz="1 0 0"/>  <!-- Rotate around X axis (roll) -->
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1.0"/>  <!-- ±90 degrees -->
  </joint>

  <!-- Wrist Pitch Link - Second wrist joint (pitch) -->
  <!-- This link represents the wrist pitch actuator -->
  <link name="wrist_pitch_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.03"/>
      </geometry>
      <material name="orange">
        <color rgba="1 0.6 0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.00005" ixy="0" ixz="0" iyy="0.00005" iyz="0" izz="0.00005"/>
    </inertial>
  </link>

  <!-- Wrist Joint 2 (Pitch) -->
  <!-- Parent: wrist_roll_link, Child: wrist_pitch_link -->
  <!-- This joint allows the wrist to move up/down (pitch) around Y-axis -->
  <joint name="wrist_pitch_joint" type="revolute">
    <parent link="wrist_roll_link"/>
    <child link="wrist_pitch_link"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/>  <!-- 2cm above wrist_roll_link -->
    <axis xyz="0 1 0"/>  <!-- Rotate around Y axis (pitch) -->
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1.0"/>  <!-- ±90 degrees -->
  </joint>

  <!-- Hand Link (End Effector) -->
  <!-- This link represents the hand/gripper attachment point -->
  <link name="hand_link">
    <visual>
      <geometry>
        <box size="0.1 0.08 0.05"/>
      </geometry>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>  <!-- 5cm forward to represent hand length -->
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.08 0.05"/>
      </geometry>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Wrist Yaw Joint -->
  <!-- Parent: wrist_pitch_link, Child: hand_link -->
  <!-- This joint allows the hand to swing left/right (yaw) around Z-axis -->
  <joint name="wrist_yaw_joint" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="hand_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>  <!-- Same position as wrist_pitch_link -->
    <axis xyz="0 0 1"/>  <!-- Rotate around Z axis (yaw) -->
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1.0"/>  <!-- ±90 degrees -->
  </joint>

  <!-- Materials Definition -->
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="light_blue">
    <color rgba="0.5 0.5 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>
  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  <material name="orange">
    <color rgba="1 0.6 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

</robot>